#extends MessagesTemplate

#block tabcontent

#if not $msgs
<p>No messages found.</p>
#else

<table class="listtable">
    <caption>Messages</caption>
    <thead>
        <tr>
            <th>Published</th>
            <th>Title</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
    #for $msg in $msgs
        #if len($msg.description) > 80 
            #set $desc = $msg.description[:80] + '...'
        #else
            #set $desc = $msg.description
        #end if
        <tr class="$rowcycler">
            <td>$msg.publish_start.strftime('%Y-%m-%d %H:%M')</td>
            <td><a href="$reverse('messages-view', args=($msg.messageid,))">$msg.title.replace('<', '&lt;').replace('>', '&gt;')</a></td>
            <td>$desc.replace('<', '&lt;').replace('>', '&gt;')</td>
        </tr>
    #end for
    </tbody>
</table>

#end if

#end block tabcontent
