#extends MainTemplate

##attr $title = 'Messages'
#attr $path = [("Home", "/"), ("Messages", "")]

#def additionalHead
    <link rel="alternate" type="application/rss+xml"
        title="Messages Feed (RSS 2.0)" href="$reverse('messages-rss')" />
#end def additionalHead

#def $makeStartMenu($menu, $current = False)
<div class="tabs">
    <ul>
    #for $item in $menu:
        #if $current in $item.link:
        <li class="tabactive"><a href="$item.link">$item.text</a></li>
        #else:
        <li><a href="$item.link">$item.text</a></li>
        #end if
    #end for
    </ul>

    <div class="tabcontent">

#end def

#def $makeEndMenu()

    </div>
</div>
#end def

#block content

<h2>$title  <a href="$reverse('messages-rss')"><img src="/images/icons/feed-icon-14x14.png" alt="RSS" /></a></h2>

$makeStartMenu($menu, $current)



#set $infomsgs = $getVar('infomsgs', [])
#if len($infomsgs)
<ul>
#for $infomsg in $infomsgs
    <li>$infomsg</li>
#end for
</ul>
#end if

#set $errors = $getVar('errors', [])
#if len($errors)
<p>The following errors occured:</p>

<ul>
#for $error in $errors
    <li>$error</li>
#end for
</ul>
#end if

#block tabcontent
<p>Intentionally left blank.</p>
#end block tabcontent

$makeEndMenu()

#end block content

#block additionalCSS
$default_tabs_CSS
$default_table_CSS
#end block additionalCSS
