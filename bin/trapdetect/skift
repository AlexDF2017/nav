#!/usr/bin/perl -w

$traplog = "/home/trapdet/log/traplog";

chomp ($dato = `date +%d%m%y --date "1 day ago"`);

print "$dato\n";

# Skifter log
print "Flytter logfila\n";
print "mv -f $traplog $traplog$dato";
`mv -f $traplog $traplog$dato`;
open (HANDLE, ">$traplog"); 
print HANDLE "";
close HANDLE;
