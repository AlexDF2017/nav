#!/usr/bin/perl

$dir = "/home/trapdet/www/gif";

$date = `date`;
print "$date";

opendir (DIR, $dir) or die "Kunne ikke åpne $dir";
@files = readdir DIR;
closedir DIR;

$teller = 0;
for (@files) {
    if (/^(\d{8}\.gif)/) {
	$beskjed = `rm -f $dir/$1`;
	$teller++;
    }
}
print "Antall filer slettet: $teller\n";
print "------------------------------------------------\n";
