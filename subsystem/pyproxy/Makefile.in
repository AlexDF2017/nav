# programs to use for make
INSTALL=@INSTALL@
SHELL=@SHELL@
# paths
prefix=@prefix@
bindir=@bindir@
libdir=@libdir@
exec_prefix=@exec_prefix@
pythonlibdir=@pythonlibdir@
webroot=@webroot@
sysconfdir=@sysconfdir@
WEBLIB=$(pythonlibdir)/nav/web/pyproxy
WEBNAMES=navAdmin vPServer

#WEBDIR=$(webroot)/$(WEBNAME)
WEBLIBS=proxy.py


.PHONY: all lib web install install-lib install-web clean distclean
# ok, the targets
all: 
lib:
web:

# the install
install: install-lib install-web

install-lib: lib
	$(INSTALL) -d $(DESTDIR)$(WEBLIB)
	touch $(DESTDIR)$(WEBLIB)/__init__.py
	for file in $(WEBLIBS); do $(INSTALL) -m 644 src/$$file $(DESTDIR)$(WEBLIB)/; done
install-web: web
	for dir in $(WEBNAMES); do \
		$(INSTALL) -d $(DESTDIR)$(webroot)/$$dir; \
		$(INSTALL) -m 644 src/.htaccess $(DESTDIR)$(webroot)/$$dir/.htaccess;\
		touch $(DESTDIR)$(webroot)/$$dir/index; \
	 done

clean:
	find -name *.pyc -print0 | xargs --null rm -f
distclean: clean
	rm -f Makefile