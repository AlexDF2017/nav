# Authors: Morten Brekkevold <morten.brekkevold@uninett.no>
#
####################
prefix=@prefix@
exec_prefix=@exec_prefix@
sysconfdir=@sysconfdir@
initdir=@initdir@
bindir=@bindir@
localstatedir=@localstatedir@
user=@nav_user@
SMSD=${bindir}/smsd.py

# Source function library.
. ${initdir}/functions

[ -x $SMSD ] || exit 2

case "$1" in
	start)
		# Start daemon
		echo -n "Starting smsd: "
		daemon "su - ${user} -c $SMSD"
		rc=$?
		echo
		exit $rc
		;;
	stop)
		# Stop daemon.
		echo -n "Shutting down smsd: "
		if killproc smsd; then
		    echo
		    exit 0
		else
		    echo
		    exit 1
		fi
        	;;
	restart)
		$0 stop
		$0 start
		;;
	status)
	        status smsd
		exit $?
		;;
	*)
		echo "Usage: $0 {start|stop|restart|status}"
		exit 1
esac

exit 0

