##
## This is the makefile for the SMS Daemon
##

SHELL = @SHELL@
INSTALL = @INSTALL@

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
sysconfdir = @sysconfdir@
initdir = $(sysconfdir)/init.d

binaries = smsd.pl safe_smsd.pl
startscripts = smsd
conffiles = smsd.conf

.PHONY: all install install-bin install-scripts clean distclean install-conf

all: 

install: $(startscripts) install-bin install-scripts install-conf

install-bin:
	@for file in $(binaries); do \
	  $(INSTALL) -v -D -m 755 $$file $(DESTDIR)$(bindir)/$$file || exit 1; \
	done

install-scripts:
	@for file in $(startscripts); do \
	  $(INSTALL) -v -D -m 755 $$file $(DESTDIR)$(initdir)/$$file || exit 1; \
	done

install-conf:
	@for file in $(conffiles); do                          \
	  target=$(DESTDIR)$(sysconfdir)/$$file;               \
	  if [ -f "$$target" ]; then                           \
	    echo Skipping installation of config file $$file;  \
	  else                                                 \
	    $(INSTALL) -v -D -m 644 $$file $$target || exit 1; \
	  fi;                                                  \
	done

clean:
	rm -f *~

distclean: clean
	rm -f Makefile smsd
