SHELL = @SHELL@
INSTALL = @INSTALL@
CHEETAH = @CHEETAH@

prefix = @prefix@
exec_prefix = @exec_prefix@
libdir = @libdir@

webroot = @webroot@

# Just grab all files, except SVN administrative areas, and a few
# other source tree-only files.
files = $(shell find -type f -and -not \( -iregex '.*\.svn.*' -or -name 'INSTALL' -or -name 'Makefile' -or -name 'Makefile.in' -or -name '*~' \) )

.PHONY: all install

all:

print:
	@echo Files
	@echo $(files)

install:
	for file in $(files); do \
	  $(INSTALL) -D -v -m 644 $$file $(DESTDIR)/$(webroot)/alertprofiles/$$file || exit 1; \
	done

clean:
	rm -f *~ 
	rm -f locale/*~
	rm -f locale/en/*~
	rm -f locale/en/LC_MESSAGES/*~
	rm -f locale/no/*~
	rm -f locale/no/LC_MESSAGES/*~
	rm -f wap/*~
	rm -f images/*~
	rm -f css/*~
	rm -f documents/*~
	rm -f icons/*~
	rm -f modules/*~

distclean: clean
	rm -f Makefile
