SHELL = @SHELL@
INSTALL = @INSTALL@
CHEETAH = @CHEETAH@

prefix = @prefix@
exec_prefix = @exec_prefix@
libdir = @libdir@

webroot = @webroot@

# Just grab all files, except SVN administrative areas, and a few
# other source tree-only files.
files = $(shell find -type f -and -not \( -iregex '.*\.svn.*' -or -name 'INSTALL' -or -name 'Makefile' -or -name 'Makefile.in' -or -name '*~' -or -name '*.tool' \) )

.PHONY: all install

all:

print:
	@echo Files
	@echo $(files)

install:
	for file in $(files); do \
	  $(INSTALL) -D -v -m 644 $$file $(DESTDIR)/$(webroot)/alertprofiles/$$file || exit 1; \
	done

clean:
	find -name '*~' -print0 | xargs --null rm -f

distclean: clean
	rm -f Makefile
