#extends MaintenanceTemplate
#import mx.DateTime

#block tabcontent

#if not $tasks
<p>No maintenance tasks found.</p>
#else
<table class="listtable">
    <caption>Maintenance Tasks</caption>
    <thead>
        <tr>
            <th>Start</th>
            <th>End</th>
            <th>Description</th>
            <th>Components</th>
            <th>Author</th>
            <th>State</th>
        </tr>
    </thead>
    <tbody>

    #for $task in $tasks
        #if len($task.description) > 50
            #set $desc = $task.description[:50].replace('<', '&lt;').replace('>', '&gt;') + '...'
        #else
            #set $desc = $task.description.replace('<', '&lt;').replace('>', '&gt;')
        #end if
        #if type($task.components) is list
            #set $comp = len($task.components)
        #else
            #set $comp = 0
        #end if
        <tr class="$rowcycler">
            <td>$task.maint_start.strftime('%Y-%m-%d %H:%M')</td>
            <td>$task.maint_end.strftime('%Y-%m-%d %H:%M')</td>
            <td><a href="view?id=$task.maint_taskid">$desc</a></td>
            <td><a href="view?id=$task.maint_taskid">$comp</a></td>
            <td>$task.author</td>
            <td>$task.state</td>
        </tr>
    #end for

    </tbody>
</table>

#end if

#end block tabcontent
