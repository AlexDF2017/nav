##
## This is the makefile for statTools
##

SHELL = @SHELL@
INSTALL = @INSTALL@

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
sysconf = @sysconfdir@

webroot = @webroot@

binaries = cleanrrds.pl filloiddb.pl makecricketconfig.pl
configfiles = cricketoids.txt

.PHONY: all install install-lib install-bin install-conf install-web clean distclean

all: 

install: install-bin install-conf

install-bin:
	@for file in $(binaries); do \
	  $(INSTALL) -v -D -m 755 $$file $(DESTDIR)$(bindir)/$$file || exit 1; \
	done

install-conf:
	@for file in $(configfiles); do \
	  $(INSTALL) -v -D -m 755 $$file $(DESTDIR)$(sysconf)/$$file || exit 1; \
	done

clean:
	rm -f *~

distclean: clean
	rm -f Makefile
