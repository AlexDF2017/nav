SHELL = @SHELL@
INSTALL = @INSTALL@
CHEETAH = @CHEETAH@

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
libdir = @libdir@
sysconfdir = @sysconfdir@

pythonlibdir = @pythonlibdir@
templatedir = ${pythonlibdir}/nav/web/templates
webroot = @webroot@

files = EmotdSelect.py

.PHONY: all install install-lib clean distclean

all:

install: install-lib

install-lib:
	for file in $(files); do \
	  $(INSTALL) -v -D -m 644 $$file $(DESTDIR)$(pythonlibdir)/nav/web/$$file || exit 1; \
	done

clean:
	rm -f *~

distclean: clean
	rm -f Makefile
