#import mx.DateTime
## FIXME: %Z can be empty, but we should always give a timezone such as
## '+02:00' for CEST and '+01:00' for CET
#set $lastBuildDate = mx.DateTime.now().strftime('%a, %d %b %Y %H:%M:%S %Z')
<?xml version="1.0" encoding="utf-8"?>

<rss version="2.0">
    <channel>
        <title>$channeltitle.replace('<', '&lt;').replace('>', '&gt;')</title>
        <link>$channellink</link>
        <description>$channeldesc.replace('<', '&lt;').replace('>', '&gt;')</description>
        <language>$channellang</language>
        <pubDate>$pubDate.strftime('%a, %d %b %Y %H:%M:%S %Z')</pubDate>
        <lastBuildDate>$lastBuildDate</lastBuildDate>
        <ttl>$channelttl</ttl>
        
        #set msgs = $getVar('msgs', [])
        #for msg in msgs
        <item>
            <title>$msg.title.replace('<', '&lt;').replace('>', '&gt;')</title>
            <pubDate>$msg.publish_start.strftime('%a, %d %b %Y %H:%M:%S %Z')</pubDate>
            <link>$msg.link</link>
            <guid>$msg.guid</guid>
            <comments />
            <description>$msg.description.replace('<', '&lt;').replace('>', '&gt;')</description>
        </item>
        #end for
    </channel>
</rss>
