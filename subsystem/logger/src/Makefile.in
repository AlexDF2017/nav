SHELL = @SHELL@
INSTALL = @INSTALL@
CHEETAH = @CHEETAH@

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
libdir = @libdir@
sysconfdir = @sysconfdir@

pythonlibdir = @pythonlibdir@
templatedir = ${pythonlibdir}/nav/web/templates
webroot = @webroot@

files = main.py .htaccess

.PHONY: all install install-web clean distclean

all:

install: install-web

install-web:
	for file in $(files); do \
	  $(INSTALL) -v -D -m 644 $$file $(DESTDIR)$(webroot)/logger/$$file || exit 1; \
	done

clean:
	rm -f *~

distclean: clean
	rm -f Makefile
