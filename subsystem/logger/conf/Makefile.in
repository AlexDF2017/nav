SHELL = @SHELL@
INSTALL = @INSTALL@
CHEETAH = @CHEETAH@

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
libdir = @libdir@
sysconfdir = @sysconfdir@

pythonlibdir = @pythonlibdir@
templatedir = ${pythonlibdir}/nav/web/templates
webroot = @webroot@
localstatedir = @localstatedir@

top_srcdir = @top_srcdir@

files = logger.conf

.PHONY: all install install-web clean distclean

all: logger.conf

logger.conf: logger.conf.source
	$(top_srcdir)/tools/expand.pl logger.conf.source > logger.conf

install: install-web

install-web:
	for file in $(files); do \
	  $(INSTALL) -v -D -m 644 $$file $(DESTDIR)$(sysconfdir)/$$file || exit 1; \
	done

clean:
	rm -f *~
	rm logger.conf

distclean: clean
	rm -f Makefile
