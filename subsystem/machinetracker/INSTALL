IUSE=jallalanguage

DESCRIPTION="Machine tracking tool of the NAVv3 package"

DEPEND=nav.web.URI

PREPARE{
	mkdir $APACHE/webroot/machinetracker
}
DIR=$APACHE/webroot/machinetracker

COPY{
	cp src/machinetracker.py web $DIR/machinetracker.py
	cp src/htaccess $DIR/machinetracker.py
}

CHEETAH-COMPILE{
	cheetah-compile src/MachineTrackerTemplate.tmpl $DIR/MachineTrackerTemplate
}


