SHELL = @SHELL@
INSTALL = @INSTALL@
CHEETAH = @CHEETAH@

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
libdir = @libdir@
sysconfdir = @sysconfdir@

pythonlibdir = @pythonlibdir@
templatedir = ${pythonlibdir}/nav/web/templates
webroot = @webroot@

files = DatabaseResult.py  Generator.py  Report.py  report.py

.PHONY: all install install-lib install-bin install-web clean distclean

all:

install: install-web

install-web:
	for file in $(files); do \
	  $(INSTALL) -v -D -m 644 $$file $(DESTDIR)$(webroot)/report/$$file || exit 1; \
	done

clean:
	rm -f *~

distclean: clean
	rm -f Makefile
