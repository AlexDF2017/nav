#extends ReportTemplate

#block content

<h2>Report list</h2>

#if $report_list_local
<table class="listtable vertitablefull">
    <caption>Local reports</caption>
    <thead>
        <tr>
            <th style="width: 30%">Name</th>
            <th style="width: 70%">Desciption</th>
        </tr>
    </thead>
    <tbody>
    #for $report in $report_list_local
        <tr class="$rowcycler">
            <td><a href="/report/$report[0]">$report[1]</a></td>
            <td>$report[2]</td>
        </tr>
    #end for
    </tbody>
</table>
#end if

<table class="listtable vertitablefull">
    <caption>Default reports</caption>
    <thead>
        <tr>
            <th style="width: 30%">Name</th>
            <th style="width: 70%">Desciption</th>
        </tr>
    </thead>
    <tbody>
    #for $report in $report_list
        <tr class="$rowcycler">
            <td><a href="/report/$report[0]">$report[1]</a></td>
            <td>$report[2]</td>
        </tr>
    #end for
    </tbody>
</table>

#end block content
