##
## This is the makefile for startstop
##

SHELL = @SHELL@
INSTALL = @INSTALL@

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
sysconfdir = @sysconfdir@
initdir = $(sysconfdir)/init.d

binaries = nav
startscripts = functions

.PHONY: all install install-bin install-scripts clean distclean

all: 

install: install-bin install-scripts

install-bin:
	@for file in $(binaries); do \
	  $(INSTALL) -v -D -m 755 $$file $(DESTDIR)$(bindir)/$$file || exit 1; \
	done

install-scripts:
	@for file in $(startscripts); do \
	  $(INSTALL) -v -D -m 755 $$file $(DESTDIR)$(initdir)/$$file || exit 1; \
	done

clean:
	rm -f *~

distclean: clean
	rm -f Makefile functions
