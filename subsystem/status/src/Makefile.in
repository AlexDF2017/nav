SHELL = @SHELL@
INSTALL = @INSTALL@
CHEETAH = @CHEETAH@

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
libdir = @libdir@
sysconfdir = @sysconfdir@

pythonlibdir = @pythonlibdir@
templatedir = ${pythonlibdir}/nav/web/templates
webroot = @webroot@

templates = StatusTemplate.py
files = StatusPrefs.py  status.py  StatusSections.py  StatusTables.py .htaccess

.PHONY: all install install-lib install-bin install-web clean distclean

all: $(templates)

$(templates): %.py: %.tmpl
	$(CHEETAH) compile $<

install: install-lib install-web
	$(INSTALL) -v -D -m 644 default-prefs.pickle $(DESTDIR)/tmp/default-prefs.pickle

install-lib: $(templates)
	for file in $(templates); do \
	  $(INSTALL) -v -D -m 644 $$file $(DESTDIR)$(templatedir)/$$file || exit 1; \
	done

install-web:
	for file in $(files); do \
	  $(INSTALL) -v -D -m 644 $$file $(DESTDIR)$(webroot)/status/$$file || exit 1; \
	done

clean:
	rm -f *~
	rm -f $(templates)

distclean: clean
	rm -f Makefile
