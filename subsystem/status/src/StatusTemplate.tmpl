            <th id="$id">$heading</th>
#end if
#end for
            <td bgcolor="white" style="background-image:url('/images/ragen/navbar-end.gif'); background-position: top right; background-repeat: no-repeat; width: 14px;">
        </tr>
#set $odd = False
#for $row in $SectionBox.rows
#if $odd
#set $rowstyle = 'oddrow'
#set $odd = False
#else
#set $rowstyle = 'evenrow'
#set $odd = True
#end if
        <tr class="$rowstyle">
            <td> </td>
#for $col, $url, $style in $row
#if $url
            <td class="$style"><a href="$url">$col</a>
#else
            <td class="$style">$col</td>
#end if
#end for
            <td> </td>
        </tr>
