<table class=header-active>
<tr>
<th>Select</th><th>Name</th><th>Filter</th>
</tr>

#for $editSection in $prefsPage.editSectionBoxes
$displayEditSectionBox($editSection,$prefsPage.radioButtonName)
#end for

