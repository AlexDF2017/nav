SHELL = @SHELL@
INSTALL = @INSTALL@
CHEETAH = @CHEETAH@

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
libdir = @libdir@
sysconfdir = @sysconfdir@

pythonlibdir = @pythonlibdir@
templatedir = ${pythonlibdir}/nav/web/templates
webroot = @webroot@

templates = EditTemplate.py EmotdFrontpage.py EmotdMessageTemplate.py EmotdStandardTemplate.py EmotdTemplate.py MaintenanceTemplate.py MaintListTemplate.py MaintTimeTemplate.py ViewMessageTemplate.py

.PHONY: all install install-lib clean distclean

all: $(templates)

$(templates): %.py: %.tmpl
	$(CHEETAH) compile $<

install: install-lib

install-lib: $(templates)
	for file in $(templates); do \
	  $(INSTALL) -v -D -m 644 $$file $(DESTDIR)$(templatedir)/$$file || exit 1; \
	done

clean:
	rm -f *~
	rm -f $(templates)

distclean: clean
	rm -f Makefile
