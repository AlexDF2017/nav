# This script controls start/stop/status of the NAV pping daemon.

prefix=@prefix@
exec_prefix=@exec_prefix@
sysconfdir=@sysconfdir@
initdir=@initdir@
BIN=@bindir@/pping.py
PIDFILE=@localstatedir@/run/pping.pid

# Source function library.
. ${initdir}/functions

[ -x $BIN ] || exit 1

# See how we were called.
case "$1" in
	start)
		# Start daemons.
		echo -n "Starting pping: "
		rc= daemon $BIN
		echo
		exit $rc
		;;
	stop)
		# Stop daemons.
		echo -n "Shutting down pping: "
		if killproc pping.py; then
		# Make sure the pidfile is gone when stopping normal
		    rm -f $PIDFILE
		    echo
		    exit 0
		else
		    echo
		    exit 1
		fi
        	;;
	restart)
		$0 stop
		$0 start
		;;
	status)
	        status pping.py
		exit $?
		;;
	*)
		echo "Usage: $0 {start|stop|restart|status}"
		exit 1
esac

exit 0

