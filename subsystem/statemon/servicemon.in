prefix=@prefix@
exec_prefix=@exec_prefix@
sysconfdir=@sysconfdir@
initdir=@initdir@
BIN=@bindir@/servicemon.py
PIDFILE=@localstatedir@/run/servicemon.pid

# Source function library.
. ${initdir}/functions

[ -x $BIN ] || exit 1

# See how we were called.
case "$1" in
	start)
		# Start daemons.
		echo -n "Starting servicemon: "
		rc= daemon $BIN
		echo
		exit $rc
		;;
	stop)
		# Stop daemons.
		echo -n "Shutting down servicemon: "
		if killproc servicemon.py; then
		# Make sure the pidfile is gone when stopping normal
		    rm -f $PIDFILE
		    echo
		    exit 0
		else
		    echo
		    exit 1
		fi
        	;;
	restart)
		$0 stop
		$0 start
		;;
	status)
	        status servicemon
		exit $?
		;;
	*)
		echo "Usage: $0 {start|stop|restart|status}"
		exit 1
esac

exit 0

