SHELL = @SHELL@
INSTALL = @INSTALL@
CHEETAH = @CHEETAH@

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
libdir = @libdir@
sysconfdir = @sysconfdir@

pythonlibdir = @pythonlibdir@
templatedir = ${pythonlibdir}/nav/web/templates
webroot = @webroot@

templates = editdbTemplate.py
files = editdb.py editdbSQL.py editTables.py initBox.py .htaccess
conffiles = editdb.conf

.PHONY: all install install-lib install-bin install-web clean distclean install-conf

all: $(templates)

$(templates): %.py: %.tmpl
	$(CHEETAH) compile $<

install: install-lib install-web install-conf

install-lib: $(templates)
	for file in $(templates); do \
	  $(INSTALL) -v -D -m 644 $$file $(DESTDIR)$(templatedir)/$$file || exit 1; \
	done

install-web:
	for file in $(files); do \
	  $(INSTALL) -v -D -m 644 $$file $(DESTDIR)$(webroot)/editdb/$$file || exit 1; \
	done

install-conf:
    @for file in $(conffiles); do                          \
      target=$(DESTDIR)$(sysconfdir)/$$file;               \
      if [ -f "$$target" ]; then                           \
        echo Skipping installation of config file $$file;  \
      else                                                 \
        $(INSTALL) -v -D -m 644 $$file $$target || exit 1; \
      fi;                                                  \
    done

clean:
	rm -f *~
	rm -f $(templates)

distclean: clean
	rm -f Makefile
