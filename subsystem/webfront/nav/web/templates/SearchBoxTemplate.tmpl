##
## Contains a template function for displaying a SearchBox object
##

#def searchbox($s)
#if $s.form
<form name="$s.formCname" method="$s.method"><p>
#end if
<table title="$s.help">
    <tr>
        <th>$s.title</th>
    </tr>
    <tr>
        <td>

<p>
    <select name="$s.typeCname">
    #for $sid,$options in $s.searches.items()
        #if $s.selected == $sid
        <option value="$sid" selected="selected">$options[0]</option>
        #else
        <option value="$sid">$options[0]</option>
        #end if
    #end for
    </select>
    <input size="$s.inputSize" type="text" name="$s.inputCname" />
    <button type="submit" name="$s.submitCname">$s.submitText</button>
</p>

#if $s.error
<p class="error">$s.error</p>
#end if

#if $s.result
<p>$s.result</p>
#end if

        </td>
    </tr>
</table>
#if $s.form
</form>
#end if
#end def
