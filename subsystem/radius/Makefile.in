SHELL = @SHELL@
INSTALL = @INSTALL@

prefix = @prefix@
exec_prefix = @exec_prefix@
sysconfdir = @sysconfdir@
tooldir = @tooldir@

tool = radius.tool

.PHONY: all install clean distclean

all:
	$(MAKE) -C src $@

install: install-web
	$(MAKE) -C src $@

install-web:
	$(INSTALL) -D -v -m 644 $(tool) $(DESTDIR)$(tooldir)/$(tool)

clean:
	$(MAKE) -C src $@
	rm -f *~

distclean: clean
	$(MAKE) -C src $@
	rm -f Makefile
