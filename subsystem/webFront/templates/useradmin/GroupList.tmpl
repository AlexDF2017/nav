#extends UserAdmin

#def add_group($group)
    <tr class="$rowcycler">
        <td><a href="/useradmin/group?id=$group.id">$group.name</a></td>
        <td>$group.description</td>
        <td style="text-align: center;">$group.membercount</td>
    </tr>
#end def


#block useradmin

<table class="horiztable">

#set $groupcount = len($groups)
    <caption>
        <span class="cornerkludge"></span>
        Group List<br />
        <span class="subtitle">$groupcount groups :
        <a href="group">Create new group</a></span>
    </caption>

#set $rowcount = len($groups) + 1
    <tr class="header">
        <td class="leftkludge" rowspan="$rowcount"></td>
        <th>Name</th>
        <th>Description</th>
        <th style="text-align: center;"># of members</th>
        <td class="rightkludge" rowspan="$rowcount"></td>
    </tr>

#for $group in $groups
    $add_group($group)
#end for
</table>

#end block useradmin
