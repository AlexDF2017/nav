#extends UserAdmin

#def add_account($account)
    <tr class="$rowcycler">
        <td><a href="/useradmin/account?id=$account.id">$account.login</a></td>
        <td>$account.name</td>
        <td>$account.ext_sync</td>
        <td style="text-align: center;">$account.groupcount</td>
    </tr>
#end def


#block useradmin

<table class="horiztable">
#set $accountcount = len($accounts)
    <caption>
        <span class="cornerkludge"></span>
        Account List<br />
        <span class="subtitle">$accountcount accounts :
        <a href="account">Create new user</a></span>
    </caption>

#set $rowcount = len($accounts) + 1
    <tr class="header">
        <td class="leftkludge" rowspan="$rowcount"></td>
        <th>Login</th>
        <th>Name</th>
        <th>External</th>
        <th style="text-align: center;"># of groups</th>
        <td class="rightkludge" rowspan="$rowcount"></td>
    </tr>

#for $account in $accounts
    $add_account($account)
#end for
</table>

#end block useradmin
