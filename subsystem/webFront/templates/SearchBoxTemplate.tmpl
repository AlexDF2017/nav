#def searchbox($s)
#if $s.form
   <form name="$s.formCname" method="$s.method"><p>
#end if
   <table title="$s.help" style="border: 1px solid #666; background-image:url('/images/form/fill-active.gif');">
        <tr>
            <th colspan="3" style="text-align: left;">
                $s.title
        </tr>
#if $s.error
        <tr>
            <td colspan="3"><span style="color: #f00;font-size: 10">$s.error</span></td>
        </tr>
#end if
#if $s.result
        <tr>
            <td colspan="3"><span style="color: #090;font-size: 10">$s.result</span></td>
        </tr>
#end if
        <tr>
            <td><select name="$s.typeCname">
#for $sid,$options in $s.searches.items()
#if $s.selected == $sid
            <option selected value="$sid">$options[0]</option>
#else
            <option value="$sid">$options[0]</option>
#end if
#end for
            </select></td>
            <td><input size="$s.inputSize" type="text" name="$s.inputCname"></td>
            <td><input type="submit" name="$s.submitCname" value="$s.submitText"></td>
        </tr>
    </table>
    </p>
#if $s.form
    </form>
#end if
#end def
