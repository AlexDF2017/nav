SHELL = @SHELL@
INSTALL = @INSTALL@
CHEETAH = @CHEETAH@

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
libdir = @libdir@
sysconfdir = @sysconfdir@

pythonlibdir = @pythonlibdir@
webroot = @webroot@

.PHONY: all install install-lib install-bin install-web install-images clean distclean

all: 
	$(MAKE) -C templates $@

install: install-lib install-bin install-web
	$(MAKE) -C templates $@

install-lib:
	@cd lib; \
	for file in nav/web/*.py; do \
	  $(INSTALL) -v -D -m 644 $$file $(DESTDIR)/$(pythonlibdir)/$$file || exit 1; \
	done

install-bin:
	@cd bin; \
	for file in *.py; do \
	  $(INSTALL) -v -D -m 755 $$file $(DESTDIR)$(bindir)/$$file || exit 1; \
	done

install-web: install-images
	@cd src; \
	installable=`find . -name '*.py'; find . -name '.htaccess'; find . -name '*.html'`; \
	for file in $$installable; do \
	  $(INSTALL) -v -D -m 644 $$file $(DESTDIR)$(webroot)/$$file || exit 1; \
	done

install-images:
	@cd graphics; \
	installable=`find . -type f -and -not \( -iregex '.*\.svn.*' -or -name '*~' \)`; \
	for file in $$installable; do \
	  $(INSTALL) -v -D -m 644 $$file $(DESTDIR)$(webroot)/$$file || exit 1; \
	done

clean:
	@backups=`find lib bin src -name '*~'`; \
	rm -f $$backups
	rm -f *~
	$(MAKE) -C templates $@

distclean: clean
	rm -f Makefile
	$(MAKE) -C templates $@
