#extends UserAdmin

#def add_account($account)
    <tr class="$rowcycler">
        <td><a href="/useradmin/account?id=$account.id">$account.login</a></td>
        <td>$account.name</td>
        <td>$account.ext_sync</td>
        <td style="text-align: center;">$account.groupcount</td>
    </tr>
#end def


#block useradmin

<table class="listtable">
#set $accountcount = len($accounts)
    <caption>
        Account List<br />
        <span class="subtitle">$accountcount accounts</span>
    </caption>

#if $accountcount
    <thead>
        <tr>
            <th>Login</th>
            <th>Name</th>
            <th>External</th>
            <th># of groups</th>
        </tr>
    </thead>

    <tbody>
#for $account in $accounts
    $add_account($account)
#end for
    </tbody>
#end if

    <tbody class="footer">
        <tr>
            <th colspan="0">$accountcount accounts</th>
        </tr>
    </tbody>
</table>

<p><a href="account">Create new account</a></p>

#end block useradmin
