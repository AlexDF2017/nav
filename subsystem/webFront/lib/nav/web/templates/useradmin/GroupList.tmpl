#extends UserAdmin

#def add_group($group)
    <tr class="$rowcycler">
        <td><a href="/useradmin/group?id=$group.id">$group.name</a></td>
        <td>$group.description</td>
        <td style="text-align: center;">$group.membercount</td>
    </tr>
#end def


#block useradmin

<table class="listtable">
#set $groupcount = len($groups)

    <caption>
        Group List<br />
        <span class="subtitle">$groupcount groups</span>
    </caption>

#if $groupcount
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th># of members</th>
        </tr>
    </thead>

    <tbody>
#for $group in $groups
    $add_group($group)
#end for
    </tbody>
#end if

    <tbody class="footer">
        <tr>
            <th colspan="0">$groupcount groups</th>
        </tr>
    </tbody>
</table>

<p><a href="group">Create new group</a></p>

#end block useradmin
