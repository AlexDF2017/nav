#extends nav.web.templates.MainTemplate

#block content

#if len($scopes)
<h1>Graphic view</h1>

<form action="/report/matrix" method="get">
<p>There are more than one network address scope. Please select one of them</p>
<select name="scope" onchange="this.form.submit()">
#for $n in $scopes
<option value="$n">$n</option>
#end for
</select>
<input type="submit" value="View" />

</form>

#else

<h1>Graphic view</h1>

<p>The NAV-database does not contain any network scopes. <a href="/editdb">Edit the database</a> and return to this page to see some action.</p>


#end if


#end block

#block additionalCSS
<link rel="stylesheet" type="text/css" href="/style/MatrixScopesTemplate.css" />
#end block
