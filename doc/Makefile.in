#
# Makefile for the top-level NAV documentation
#
SHELL = @SHELL@
prefix = @prefix@
exec_prefix = @exec_prefix@
docdir = @docdir@

INSTALL = @INSTALL@

# File lists

docfiles = $(wildcard sql/*.sql) \
           $(wildcard sql/upgrades/*.sql) \
           sql/README \
           sql/upgrades/README \
           getting-started.txt

.PHONY: all install

all:

install:
	@for file in $(docfiles); do \
	  $(INSTALL) -v -m 644 -D $$file $(DESTDIR)$(docdir)/$$file || exit 1; \
	done
