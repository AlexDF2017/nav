#
# Makefile for the top-level NAV documentation
#
SHELL = @SHELL@
prefix = @prefix@
exec_prefix = @exec_prefix@
docdir = @docdir@

INSTALL = @INSTALL@

# File lists

docfiles = sql/logger.sql \
           sql/manage.sql \
           sql/navprofiles.sql \
           sql/README \
           sql/snmpoid.sql \
           sql/upgrades/3.0_beta7.sql \
           sql/upgrades/3.0_beta8.sql \
           sql/upgrades/3.0_beta10.sql \
           sql/upgrades/3.0_rc1.sql \
           sql/upgrades/README \
           getting-started.txt

.PHONY: all install

all:

install:
	@for file in $(docfiles); do \
	  $(INSTALL) -v -m 644 -D $$file $(DESTDIR)$(docdir)/$$file || exit 1; \
	done
