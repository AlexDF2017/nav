#!/usr/bin/env bash

prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
localstatedir=@localstatedir@
sysconfdir=@sysconfdir@
libdir=@libdir@
javalibdir=@javalibdir@

NAV_CONF="${sysconfdir}/nav.conf"

if test -z "$JAVA_HOME"; then 
    JAVA_HOME=`awk -F= '/JAVA_HOME/ && $1!~/#.*/{gsub("[\t ]", "", $2); print $2}' $NAV_CONF`
fi

CUR_DIR=${javalibdir}/eventEngine
LOG_DIR="${localstatedir}/log/eventEngine"
PIDFILE=${localstatedir}/run/eventEngine.pid

if test -f $PIDFILE; then
    pidnum=`cat $PIDFILE`
    if test -d /proc/$pidnum; then
	echo "eventEngine already running!"
	exit 1
    fi
fi

cd $CUR_DIR
# Run script
$JAVA_HOME/bin/java -Xmx268435456 -cp "eventEngine.jar:$CLASSPATH" eventEngine $1 >> "$LOG_DIR/eventEngine-stdout.log" 2> "$LOG_DIR/eventEngine-error.log" &
pidno="$!"
echo $pidno > $PIDFILE
