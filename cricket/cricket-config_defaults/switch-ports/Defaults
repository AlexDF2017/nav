# switch-ports sub-tree
#
# This is where we collect stats on switch ports. We inherit pretty
# much everything we need, since it's in the root Default file.

#############################################
# Edited specifically for NAV v3 - NTNU
# by John Magne Bredal <bredal@itea.ntnu.no>
#############################################

Target	--default--
	inst            = 	map(switch-port-name) 
	snmp-host	= 	%switch%
	target-type	= 	switch-port
	short-desc	= 	""

dataSource ifInOctets
	ds-source	=	snmp://%snmp%/ifInOctets.%inst%

dataSource ifOutOctets
	ds-source	=	snmp://%snmp%/ifOutOctets.%inst%

dataSource ifInErrors
	ds-source	=	snmp://%snmp%/ifInErrors.%inst%

dataSource ifOutErrors
	ds-source	=	snmp://%snmp%/ifOutErrors.%inst%

targetType switch-port
	ds 	= "ifInOctets, ifOutOctets, ifInErrors, ifOutErrors"
	view	= "Octets: ifInOctets ifOutOctets, Errors: ifInErrors ifOutErrors"

html    page-header
	<!-- you could put your company logo on every page here: -->
	<h1>%auto-title%<br>%auto-target-path%/%auto-target-name%<br>%short-desc%</h1>
	<br clear=left>
