##
## Top-level Makefile for NAV
##
SHELL = @SHELL@
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
libdir = @libdir@
sysconfdir = @sysconfdir@

INSTALL = @INSTALL@
nav_user = @nav_user@
top_srcdir = @top_srcdir@

subdirs = src \
	subsystem/lib-python \
	subsystem/webFront \
	subsystem/statemon \
	subsystem/statTools

.PHONY: all install clean distclean

all:
	@for dir in ${subdirs}; do \
	  $(MAKE) -C $$dir $@ || exit 1; \
	done
	@echo Done

install:
	@for dir in ${subdirs}; do \
	  $(MAKE) -C $$dir $@ || exit 1; \
	done
	@echo Done

clean:
	rm -f *~ 
	@for dir in ${subdirs}; do \
	  $(MAKE) -C $$dir $@ || exit 1; \
	done

distclean: clean
	rm -f config.status config.cache config.log Makefile
	@for dir in ${subdirs}; do \
	  $(MAKE) -C $$dir $@ || exit 1; \
	done
